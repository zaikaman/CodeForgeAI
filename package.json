{
  "name": "codeforge-ai",
  "version": "1.0.0",
  "description": "Multi-agent AI system for automated code generation, reviews, and enhancements",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "ai",
    "code-generation",
    "multi-agent",
    "typescript",
    "adk-ts"
  ],
  "author": "CodeForge AI Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "dompurify": "^3.2.4",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@esbuild/win32-x64": "^0.25.10"
  }
}
