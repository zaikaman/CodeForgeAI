{
  "name": "@codeforge/vscode-extension",
  "displayName": "CodeForge AI",
  "description": "AI-powered code generation, review, and enhancement in VS Code",
  "version": "1.0.0",
  "publisher": "codeforge",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeforge.generateFromSelection",
        "title": "CodeForge: Generate Code from Selection"
      },
      {
        "command": "codeforge.reviewCurrentFile",
        "title": "CodeForge: Review Current File"
      },
      {
        "command": "codeforge.enhanceSelection",
        "title": "CodeForge: Enhance Selection"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}
